---
import { actions } from "astro:actions";
---

<section
  class="bg-white dark:bg-[#00091D]/70 rounded shadow-2xl shadow-white/10"
>
  <div class="py-8 lg:py-16 px-4 mx-auto max-w-screen-md">
    <form id="contact-form" class="space-y-8">
      <div>
        <label
          for="name"
          class="block mb-2 text-lg font-medium text-gray-900 dark:text-gray-300"
          >Nombre completo</label
        >

        <input
          type="text"
          id="name"
          name="name"
          class="block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"
          placeholder="Escribe tu nombre"
        />

        <p id="name-error" class="text-red-500 text-sm mt-1 hidden">
          El nombre debe tener al menos 3 caracteres.
        </p>
      </div>

      <div>
        <label
          for="email"
          class="block mb-2 text-lg font-medium text-gray-900 dark:text-gray-300"
          >Email</label
        >

        <input
          type="email"
          id="email"
          name="email"
          class="block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"
          placeholder="tu@email.com"
        />

        <p id="email-error" class="text-red-500 text-sm mt-1 hidden">
          Ingresa un email válido.
        </p>
      </div>

      <div class="sm:col-span-2">
        <label
          for="message"
          class="block mb-2 text-lg font-medium text-gray-900 dark:text-gray-400"
          >Mensaje</label
        >

        <textarea
          id="message"
          name="message"
          rows="6"
          class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg shadow-sm border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
          placeholder="Deja tu comentario..."></textarea>

        <p id="message-error" class="text-red-500 text-sm mt-1 hidden">
          El mensaje debe tener al menos 10 caracteres.
        </p>
      </div>

      <div class="flex justify-center mt-10">
        <button
          type="submit"
          id="submit-btn"
          class="bg-white/5 border dark:border-white/10 border-gray-300 rounded-full inline-flex justify-center items-center gap-x-2 py-2 px-6 text-lg transition hover:scale-110 hover:bg-white/10 dark:text-white font-semibold"
        >
          Enviar
        </button>
      </div>
      <p id="form-success" class="text-green-500 text-center font-bold hidden">
        ¡Gracias! Te responderé pronto.
      </p>
    </form>
  </div>
</section>

<script>
  import { actions } from "astro:actions";

  const form = document.getElementById("contact-form") as HTMLFormElement;
  const btn = document.getElementById("submit-btn") as HTMLButtonElement;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    // 1. Resetear estados
    document
      .querySelectorAll('[id$="-error"]')
      .forEach((el) => el.classList.add("hidden"));
    document.getElementById("form-success")?.classList.add("hidden");

    const formData = new FormData(form);
    const n = ((formData.get("name") as string) || "").trim();
    const em = ((formData.get("email") as string) || "").trim();
    const m = ((formData.get("message") as string) || "").trim();

    // 2. Validación manual
    let errorCerca = false;

    if (n.length < 3) {
      document.getElementById("name-error")?.classList.remove("hidden");
      errorCerca = true;
    }
    if (m.length < 10) {
      document.getElementById("message-error")?.classList.remove("hidden");
      errorCerca = true;
    }
    if (!em.includes("@") || em.length < 5) {
      document.getElementById("email-error")?.classList.remove("hidden");
      errorCerca = true;
    }

    if (errorCerca) return;

    // 3. Envío
    btn.disabled = true;
    btn.innerText = "Enviando...";

    try {
      const { data, error } = await actions.sendContact(formData);

      if (error) {
        btn.disabled = false;
        btn.innerText = "Enviar";
        // Si el servidor falla, mostramos el error de email por defecto
        document.getElementById("email-error")?.classList.remove("hidden");
        return;
      }

      if (data?.success) {
        document.getElementById("form-success")?.classList.remove("hidden");
        btn.innerText = "¡Listo!";
        form.reset();

        setTimeout(() => {
          btn.innerText = "Enviar";
          btn.disabled = false;
          document.getElementById("form-success")?.classList.add("hidden");
        }, 5000);
      }
    } catch (err) {
      btn.disabled = false;
      btn.innerText = "Error";
    }
  });
</script>
