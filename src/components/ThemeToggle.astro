

<button
  id="theme-toggle"
  class="relative inline-flex items-center justify-center transition-all duration-300 focus:outline-none rounded-full bg-white border border-gray-200
         /* Móvil: Círculo pequeño */
         h-8 w-8 shadow-[inset_0_2px_4px_rgba(0,0,0,0.2)]
         /* PC: Pastilla original */
         md:h-8 md:w-16 md:shadow-[inset_0_4px_8px_rgba(0,0,0,0.3)]"
>
  <span class="sr-only">Cambiar tema</span>
  
  <div
    id="toggle-circle"
    class="flex items-center justify-center rounded-full bg-white transition-all duration-300 shadow-md
           /* Móvil: Ocupa casi todo el botón */
           h-6 w-6
           /* PC: Tamaño para deslizar */
           md:h-6 md:w-6 md:absolute md:left-1"
  >
    <svg id="sun-icon" class="h-4 w-4 text-gray-800 dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364-6.364l-.707.707M6.343 17.657l-.707.707m12.728 0l-.707-.707M6.343 6.343l-.707-.707M12 5a7 7 0 100 14 7 7 0 000-14z" />
    </svg>
    <svg id="moon-icon" class="hidden h-4 w-4 text-gray-800 dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
    </svg>
  </div>
</button>

<script is:inline>
  const themeToggle = document.getElementById('theme-toggle');
  const toggleCircle = document.getElementById('toggle-circle');

  function updateTogglePosition() {
    const isDark = document.documentElement.classList.contains('dark');
    const isMobile = window.innerWidth < 768; // md en Tailwind es 768px

    if (isDark) {
      // En PC se mueve a la derecha, en móvil se queda en el centro
      if (!isMobile) {
        toggleCircle.style.transform = 'translateX(32px)';
      } else {
        toggleCircle.style.transform = 'translateX(0)';
      }
    } else {
      toggleCircle.style.transform = 'translateX(0)';
    }
  }

  themeToggle.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
    updateTogglePosition();
  });

  // Ejecutar al cargar y al cambiar el tamaño de la pantalla
  updateTogglePosition();
  window.addEventListener('resize', updateTogglePosition);
</script>